<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"    
             xmlns:d="http://schemas.microsoft.com/dotnet/2021/maui/design"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             x:Class="final_work.Plar2"
             Title="Second player">
    <ScrollView>
        <VerticalStackLayout
         Spacing="25"
         Padding="30,0"
         VerticalOptions="Center">

            <Label Text="Enter the name of the second player" FontSize="18" HorizontalOptions="Center" />

            <Entry x:Name="FirstName2per" Placeholder="Name" FontSize="16" WidthRequest="200" HeightRequest="40"/>
            <Entry x:Name="SecondName2per" Placeholder="Surname" FontSize="16" WidthRequest="200" HeightRequest="40"/>


    <Button
                x:Name="Next"
                Text="Enter values"
                SemanticProperties.Hint="Counts the number of times you click"
                Clicked="OnCounterClickedtogame"
                HorizontalOptions="Center" WidthRequest="200" HeightRequest="40" Background="Black" />


        </VerticalStackLayout>
    </ScrollView>

</ContentPage>



